<%= form_for @comment, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :content, :class => 'text-field form-control' %>
      <%= f.hidden_field :post_id, :value => params[:post_id] %>
      <%= f.hidden_field :parent_id %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  comments_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
